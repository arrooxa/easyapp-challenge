{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "typeRoots": ["./types"]
  },
  "lib": ["es2021"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}